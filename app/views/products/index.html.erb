<div class="container">
  <h1>All Products</h1>
  <div class="row">
    <div class="product-card">
      <% @products.each do |product| %>
      <h3>R$<%= product.price %>-<%= product.name %></h3>
      <p><%= product.description %></p>
      <% end %>
    </div>
  </div>
  <%= link_to 'Create Product', new_product_path, class: "btn btn-warning" %>
</div>

