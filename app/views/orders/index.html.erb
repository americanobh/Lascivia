<div class="container">
  <div class="row">
    <div class="col d-flex justify-content-center">
      <div class="cart-card align-items-center">

        <div class="form-group" id="cart-form">
          <div class="name d-flex flex-direction-row justify-content-around">
            <div class="first-name">

              <label for="">Nome</label>
              <input type="text" class="form-control" placeholder="Ronaldinho">

            </div>
            <div class="last-name">
              <label for="">Sobrenome</label>
              <input type="text" class="form-control" placeholder="Gaúcho">

            </div>
          </div>
          <div class="container col-6" id="final-form">
            <label for="">Cartão de Crédito</label>
            <input type="text" class="form-control" placeholder="0000-0000-0000-0000">
          </div>

        </div>

        <div class="container d-flex flex-row justify-content-around" id="ftr">

          <div class="order-item-side">
              <h4 class="card-title">Produtos:</h4>
              <% OrderItem.all.each do |order_item| %>
              <%= order_item.quantity %>
              R$<%= order_item.product.price.to_i %> <%= order_item.product.name %> <br>
              <% end %>
          </div>

          <div class="payment-side">
              <h4 class="card-title">Resumo da Compra:</h4>
              <%= link_to "Finalizar Compra 3===D", root_path, class: 'btn btn-warning', id: 'buy-btn' %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
